        img(data-ng-src="data:{{"+root+name+".filetype}};base64,{{"+root+name+".base64}}" data-err-src="images/png/avatar.png")
        //TODO img error
        input(type="file" accept="image/*" ng-model=root+name required base-sixty-four-input)
